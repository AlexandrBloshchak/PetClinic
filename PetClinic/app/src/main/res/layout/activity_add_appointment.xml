<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Назад" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запись на прием"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:padding="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сначала добавьте питомца"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Для записи на прием необходимо добавить хотя бы одного питомца"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoAddPet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить питомца"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- Form -->
        <ScrollView
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- Название записи (выпадающий список) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Название записи"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />

                <!-- Дата -->
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Дата"
                    android:layout_marginTop="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />

                <!-- Время -->
                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Время"
                    android:layout_marginTop="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />

                <!-- Адрес -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Адрес"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <Spinner
                    android:id="@+id/spAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />

                <!-- Кабинет (появляется после выбора адреса) -->
                <TextView
                    android:id="@+id/tvCabinetLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Кабинет врача"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spCabinet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:visibility="gone" />

                <!-- Питомец -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выбери питомца"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:id="@+id/spPets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сохранить запись"
                    android:layout_marginTop="18dp" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>
